# 데이터베이스 설정
DATABASE_URL=postgresql://user:password@localhost:5432/cleanair_route

# Redis 설정
REDIS_URL=redis://localhost:6379

# 외부 API 키
AIRKOREA_API_KEY=your_airkorea_api_key_here
KMA_API_KEY=your_kma_api_key_here
KAKAO_MAP_KEY=your_kakao_map_key_here

# 서비스 URL
AI_PREDICTION_SERVICE_URL=http://localhost:8002
DATA_INGESTION_SERVICE_URL=http://localhost:8001

# 보안 설정
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 애플리케이션 설정
APP_NAME=CleanAir Route API
APP_VERSION=1.0.0
DEBUG=false

# API 설정
API_V1_PREFIX=/api/v1

# CORS 설정 (쉼표로 구분)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# 로깅 설정
LOG_LEVEL=INFO
