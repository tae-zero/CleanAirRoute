# Railway PostgreSQL 설정
# Railway에서 PostgreSQL 서비스를 추가하면 자동으로 DATABASE_URL이 설정됩니다
# DATABASE_URL=postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway

# Redis 설정 (Railway Redis 서비스 사용 시)
# REDIS_URL=redis://default:password@containers-us-west-xxx.railway.app:6379

# 외부 API 키 (Railway 환경 변수에서 설정)
# AIRKOREA_API_KEY=your_airkorea_api_key_here
# KMA_API_KEY=your_kma_api_key_here
# KAKAO_MAP_KEY=your_kakao_map_key_here

# 보안 설정
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 애플리케이션 설정
APP_NAME=CleanAir Route API
APP_VERSION=1.0.0
DEBUG=false

# API 설정
API_V1_PREFIX=/api/v1

# CORS 설정 (프론트엔드 도메인 추가)
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,http://localhost:3000

# 로깅 설정
LOG_LEVEL=INFO
